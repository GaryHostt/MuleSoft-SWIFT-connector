				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"messageType\": \"MT103\",\n  \"format\": \"MT\",\n  \"content\": \":20:TESTREF123\\n:32A:240107USD10000,00\\n:50K:Test Customer\\n:59:Test Beneficiary\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/validate",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"validate"
					]
