					"name": "Translation Success",
					"originalRequest": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"messageType\": \"MT103\",\n  \"content\": \":20:TEST123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
